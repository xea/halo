			#menu
				%ul
					%li.selected
						%a{ :href => '/' }
							.tab.icon-home-200
					%li
						%a{ :href => '/transactions' }
							.tab.icon-transactions-200
					%li
						%a{ :href => '/settings' }
							.tab.icon-settings-200
					%li
						%a{ :href => '/accounts' }
							.tab.icon-accounts-200
					%li
						%a{ :href => '/categories' }
							.tab.icon-categories-200
					%li
						%a{ :href => '/user/logout' }
							.tab.icon-logout-200
